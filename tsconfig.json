{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "ignoreDeprecations": "5.0",
    "paths": {
      "@skillshare/database": ["./packages/database"],
      "@skillshare/database/*": ["./packages/database/*"],
      "@skillshare/ui": ["./packages/ui"],
      "@skillshare/ui/*": ["./packages/ui/*"],
      "@skillshare/shared": ["./packages/shared"],
      "@skillshare/shared/*": ["./packages/shared/*"]
    }
  },
  "include": [
    "apps/**/*",
    "packages/**/*"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "build",
    "**/node_modules",
    "**/.next",
    "**/dist"
  ]
}